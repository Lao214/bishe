            1=1 and member_no is not null
            <if test="parentAreaNo !=null and parentAreaNo != ''">
                and  parent_area_no = #{parentAreaNo}
            </if>
            <if test="areaName !=null and areaName != ''">
                and  area_name = #{areaName}
            </if>
