            </if>

        </where>
    </sql>
    <!--城市三级联动用   @author王诚      @date 2018年09月14日      -->
    <select id="queryAreaByParent" resultMap="BaseResultMap" parameterType="java.lang.String">
        select
        <include refid="Base_Column_List"/>
        from b_area where parent_area_no = #{parentId}
    </select>
    


</mapper>